pipeline {
    agent any
    environment {
        staging_server = "139.59.34.158"
        staging_port = "8080"
    }

    stages {
        stage('Deploy to Remote') {
            steps {
                sh "scp -P ${staging_port} ${WORKSPACE}/* root@${staging_server}:/var/www/html/phpwebapp/"
            }
        }
    }
}
